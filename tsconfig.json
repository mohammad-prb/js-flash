{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": ["vite/client"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}